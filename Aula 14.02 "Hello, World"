nome = input('Insira seu nome:  ')
idade = input('Insira sua idade:  ')
print('\n')
print ('Seu nome é ',nome,'e você tem ',idade," anos de idade"'\n')
print (f'Seu nome é {nome} e você tem {idade} anos de idade\n')
 
import datetime
tday = datetime.date.today()
print ('Hoje é dia ',tday,'\n')
ANO_ATUAL = tday.year
ano_nascimento = int(ANO_ATUAL)-int(idade)-1
print ('Você nasceu em ',ano_nascimento)
